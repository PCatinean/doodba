{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "up",
            "command": "docker-compose",
            "args": ["up", "-d"],
            "isShellCommand": true,
            "isBackground": true
        },
        {
            "taskName": "update git code",
            "command": "fish",
            "args": [
                "-c",
                "set -x UID (id -u $USER); set -x GID (id -g $USER); set -x UMASK (umask); docker-compose -f setup-devel.yaml run --rm odoo",
            ],
        },
        {
            "taskName": "build",
            "command": "docker-compose",
            "args": ["build", "--pull"],
            "isShellCommand": true
        },
        {
            "taskName": "restart",
            "command": "docker-compose",
            "args": ["restart", "-t0", "odoo"],
            "isShellCommand": true
        },
        {
            "taskName": "pull",
            "command": "docker-compose",
            "args": ["pull"],
            "isShellCommand": true
        },
        {
            "taskName": "up with ptvsd",
            "command": "docker-compose",
            "options": {
                "env": {
                    "DOODBA_PTVSD_ENABLE": "1"
                }
            },
            "args": ["up", "-d"],
            "isBackground": true,
            "isShellCommand": true
        }
    ]
}
