<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_partner_street_tree" model="ir.ui.view">
            <field name="name">res.partner.street.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="email" position="before">
                    <field name="city"/>
                    <field name="street"/>
                    <field name="id"/>
                </field>
            </field>
        </record>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">Partner form (group)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="group_id"/>
                </field>
            </field>
        </record>

        <record id="view_res_partner_filter" model="ir.ui.view">
            <field name="name">Partner search (group)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="group_id"/>
                </field>
                <filter string="Country" position="after">
                    <filter string="Grupo" context="{'group_by': 'group_id'}"/>
                </filter>
            </field>
        </record>

        <record id="view_partner_property_form" model="ir.ui.view">
            <field name="name">Partner form (default field for bank accounts)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bank_ids']/tree//field[@name='state']" position="before">
                    <field name="default_bank"/>
                </xpath>
                <field name="property_account_position" position="attributes">
                    <attribute name="widget">many2one</attribute>
                </field>
            </field>
        </record>

    </data>
</openerp>
