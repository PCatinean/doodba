<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="crm_claim_view_tree" model="ir.ui.view">
            <field name="name">crm.claim.tree</field>
            <field name="model">crm.claim</field>
            <field name="inherit_id" ref="crm_claim.crm_case_claims_tree_view" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="partner_contact_address" />
                </field>
                <field name="date_deadline" position="before">
                    <field name="days_open" />
                </field>
            </field>
        </record>

        <record id="crm_claim_stage_view_form" model="ir.ui.view">
            <field name="name">crm.claim.stage.form</field>
            <field name="model">crm.claim.stage</field>
            <field name="inherit_id" ref="crm_claim.crm_claim_stage_form" />
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <field name="close" />
                </field>
            </field>
        </record>
    </data>
</openerp>
