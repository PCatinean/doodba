<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <record id="group_edit_common_partners" model="res.groups">
            <field name="name">Permitir editar compañías comunes</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_restricted_documents" model="res.groups">
            <field name="name">Restringir clientes, facturas y contratos</field>
            <field name="category_id" ref="base.module_category_sales_management"/>
        </record>

        <record id="res_partner_personal_rule" model="ir.rule">
            <field name="name">Personal Partners</field>
            <field ref="base.model_res_partner" name="model_id"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_restricted_documents'))]"/>
        </record>
        <record id="res_partner_see_all" model="ir.rule">
            <field name="name">All Partners</field>
            <field ref="base.model_res_partner" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_sale_salesman_all_leads'))]"/>
        </record>

        <record id="account_invoice_personal_rule" model="ir.rule">
            <field name="name">Personal Invoices</field>
            <field ref="account.model_account_invoice" name="model_id"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_restricted_documents'))]"/>
        </record>
        <record id="account_invoice_see_all" model="ir.rule">
            <field name="name">All Invoices</field>
            <field ref="account.model_account_invoice" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_sale_salesman_all_leads'))]"/>
        </record>

        <record id="contract_personal_rule" model="ir.rule">
            <field name="name">Personal Contracts</field>
            <field ref="netllar.model_sale_telecommunications_contract" name="model_id"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_restricted_documents'))]"/>
        </record>

        <record id="contract_see_all" model="ir.rule">
            <field name="name">All Contracts</field>
            <field ref="netllar.model_sale_telecommunications_contract" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_sale_salesman_all_leads'))]"/>
        </record>

        <record id="crm_claim_comp_rule" model="ir.rule">
            <field name="name">Claim multi-company</field>
            <field name="model_id" ref="model_crm_claim"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id','=',False), ('company_id','child_of',[user.company_id.id])]</field>
        </record>

    </data>
</openerp>
