<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Contract -->
        <record model="ir.ui.view" id="view_contract_line_tree_bond">
            <field name="name">sale.telecommunications.contract.line.tree.bond</field>
            <field name="model">sale.telecommunications.contract.line</field>
            <field name="inherit_id" ref="netllar.view_sale_telecommunications_contract_line_tree" />
            <field name="arch" type="xml">
                <field name="notes" position="replace">
                    <field name="cli_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_contract_line_form_bond">
            <field name="name">sale.telecommunications.contract.line.form.bond</field>
            <field name="model">sale.telecommunications.contract.line</field>
            <field name="inherit_id" ref="netllar.view_sale_telecommunications_contract_line_form"/>
            <field name="arch" type="xml">
                <field name="product_id" position="replace">
                    <field name="bond_id" invisible="1"/>
                    <field name="product_id"
                        on_change="onchange_product_id(product_id)"/>
                    <field name="cli_id"
                        attrs="{'invisible': [('bond_id', '=', False)], 'required': [('bond_id', '!=', False)]}"/>
                </field>
            </field>
        </record>

        <!-- Contract line -->
        <record model="ir.ui.view" id="contract_line_rule_form">
            <field name="name">sale.telecommunications.contract.line.form</field>
            <field name="model">sale.telecommunications.contract.line</field>
            <field name="inherit_id" ref="netllar.view_sale_telecommunications_contract_line_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <group position="after">
                    <field name="rule_lines"
                            colspan="4"
                            nolabel="1"
                            widget="one2many_list"
                            attrs="{'invisible': [('bond_id', '=', False)]}"/>
                </group>
            </field>
        </record>

    </data>
</openerp>
